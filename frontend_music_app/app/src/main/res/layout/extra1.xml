<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageViewItemExtra1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/luusonhien1"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>
    <RelativeLayout
        android:id="@+id/relativeLayoutExtra1"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageViewItemExtra1">
        <TextView
            android:id="@+id/textViewExtraTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anh nhớ em người yêu cũ"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/textViewExtraName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minh Vương M4U"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/textViewExtraTitle1"
            android:textSize="18dp"
            android:textColor="#9F9191"
            android:layout_marginTop="12dp"/>
    </RelativeLayout>
</RelativeLayout>