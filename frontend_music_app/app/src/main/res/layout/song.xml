<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <TextView
        android:id="@+id/textViewSTT"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="1"
        android:textSize="17dp"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/linearLayoutSongs"
        android:layout_width="295dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/textViewSTT"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNameSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Em này"
            android:textSize="19dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewSinger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gin Tuấn Kiệt, Puka"
            android:textSize="17dp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/imageViewFavoriteSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_favorite_border_24"
        android:layout_toEndOf="@id/linearLayoutSongs"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
